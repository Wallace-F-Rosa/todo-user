// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  name String @id @default(uuid())
  description String?
  users User[]
}

model User {
  username String @id 
  passwordHash String 
  roles Role[]
}
